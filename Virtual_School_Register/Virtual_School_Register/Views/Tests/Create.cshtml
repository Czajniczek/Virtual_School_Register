@model Virtual_School_Register.Models.Test

@{
    ViewData["Title"] = "Create";
    var lessonsList = ViewBag.ConductingLessons as List<ConductingLesson>;
}

<h1>Create</h1>

<h4>Test</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConductingLessonId" class="control-label">Class and subject</label>
                @*<input asp-for="ConductingLessonId" class="form-control" />*@
                <select asp-for="ConductingLessonId" class="form-control">
                    @foreach (var lesson in lessonsList)
                    {
                        <option value="@lesson.ConductingLessonId">@lesson.Class.Name - @lesson.Subject.Name</option>
                    }
                </select>
                @*<span asp-validation-for="ConductingLessonId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
