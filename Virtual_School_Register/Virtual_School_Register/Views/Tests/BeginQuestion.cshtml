@model Virtual_School_Register.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center text-center">
    <div class="mx-auto">
        <h4 style="margin-left:50px">Question</h4>
    </div>
    <div>
        <h5><b>@Model.Points pkt.</b></h5>
    </div>
</div>
@*<h4 class="d-flex justify-content-center text-center">Question</h4>
    <label asp-for="Points"><b>@Model.Points pkt.</b></label>*@
<hr />


<div class="d-flex justify-content-center text-center">
    <div>
        <form asp-action="BeginQuestion" style="width:350px">
            <div class="text-left">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <b>
                        @Html.DisplayFor(model => model.Content)
                    </b>
                </div>
                <div class="form-group">
                    <input type="radio" asp-for="Answer" value="A" />
                    @Html.DisplayFor(model => model.AnswerA)
                </div>
                <div class="form-group">
                    <input type="radio" asp-for="Answer" value="B" />
                    @Html.DisplayFor(model => model.AnswerB)
                </div>
                <div class="form-group">
                    <input type="radio" asp-for="Answer" value="C" />
                    @Html.DisplayFor(model => model.AnswerC)
                </div>
                <div class="form-group">
                    <input type="radio" asp-for="Answer" value="D" />
                    @Html.DisplayFor(model => model.AnswerD)
                </div>
                <input asp-for="MyPoints" hidden />
                <input asp-for="MyQuestion" hidden />
                <input asp-for="TestId" hidden />
                <input asp-for="CorrectAnswer" hidden />
                <input asp-for="Points" hidden />
            </div>
            <br />

            <div>
                <input type="submit" value="Next" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<hr />
<div class="d-flex justify-content-center text-center">
    @Html.ActionLink("Exit", "Index", "Tests", null, new { @class = "btn btn-danger" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}