@model Virtual_School_Register.Models.File
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Deleting file"];
    var where = ViewBag.BackToSubject as int?;
}

<div class="d-flex justify-content-center text-center">
    <div>
        <h1>@Localizer["Delete file"]</h1>
        <br />

        <table class="table table-striped text-left" style="width:500px">
            <tbody>
                <tr>
                    <td>
                        <b>@Localizer["Name"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Localizer["Description"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Localizer["Date"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Date)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Localizer["Subject"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Subject.Name)
                    </td>
                </tr>
            </tbody>
        </table>

        <form asp-action="Delete">
            @Html.ActionLink(Localizer["Back"].Value.ToString(), "Index", "Files", new { subjectId = @where }, new { @class = "btn btn-primary" })
            <input type="hidden" asp-for="FileId" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        </form>
    </div>
</div>





