@model Virtual_School_Register.Models.File
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Adding a file"];
    var where = ViewBag.BackToSubject as int?;
}

<div class="d-flex justify-content-center text-center">
    <div>
        <h1>@Localizer["Add file"]</h1>
        <br />

        <form asp-action="Create" method="post" enctype="multipart/form-data" style="width:500px">
            <div class="text-left">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">@Localizer["Description"]</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["Upload file"]</label>
                    <input class="custom-file" name="files" type="file" />
                </div>
                <div class="form-group">
                    <input asp-for="SubjectId" hidden />
                </div>
            </div>
            <br />

            <div class="form-group">
                @Html.ActionLink(Localizer["Back"].Value.ToString(), "Index", "Files", new { subjectId = @where }, new { @class = "btn btn-primary" })
                <input type="submit" value="@Localizer["Add"]" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


