@model IEnumerable<Virtual_School_Register.Models.File>

@{
    ViewData["Title"] = "Files";
}

@*<h1>Index</h1>*@

<p>
    <a class="btn btn-success" asp-action="Create">Add New</a>
</p>
<table class="table table-striped text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@item.Name, "DownloadFile", "Files", new { fileId = @item.FileId })
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                    @*<img src="@item.Name + @item.FileType" height="100" width="100" />*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.FileId">Details</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Nauczyciel"))
                    {
                        @*<a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.FileId">Edit</a>*@
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.FileId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Back to List", "Index", "Subjects", null, new { @class = "btn btn-primary" })