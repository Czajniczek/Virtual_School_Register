@model Virtual_School_Register.Models.Class

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassTutorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassTutorId)
        </dd>
    </dl>
</div>
<hr />
<br />
<br />

<div class="row">
    <div class="col-md-6">
        <h1>Students list:</h1>
        <br />
        <table class="table">
            <tr>
                <th>@Html.DisplayName("Name")</th>
                <th>@Html.DisplayName("Surname")</th>
                <th>Action</th>
            </tr>
            @foreach (Virtual_School_Register.Models.User student in ViewBag.StudentsList)
            {
                <tr>
                    <td>@Html.DisplayFor(i => student.Name)</td>
                    <td>@Html.DisplayFor(i => student.Surname)</td>
                    @*<td>@student.Name</td>
                        <td>@student.Surname</td>*@
                    <td>
                        @*<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                        <a class="btn btn-outline-danger" asp-action="DeleteUser" asp-route-id="@student.Id">Remove</a>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-6">
        <h1>Students without class:</h1>
        <br />
        <table class="table">
            <tr>
                <th>@Html.DisplayName("Name")</th>
                <th>@Html.DisplayName("Surname")</th>
                <th>Action</th>
            </tr>
            @foreach (Virtual_School_Register.Models.User studentWithNoClass in ViewBag.StudentsWithNoClassList)
            {
                <tr>
                    <td>@Html.DisplayFor(i => studentWithNoClass.Name)</td>
                    <td>@Html.DisplayFor(i => studentWithNoClass.Surname)</td>
                    <td>
                        @*<a class="btn btn-outline-success" asp-action="AddUser" asp-route-id="@studentWithNoClass.Id">Add</a>*@
                        @Html.ActionLink("Add", "AddUser", "Classes", new { id = studentWithNoClass.Id, classId = ViewBag.ClassId }, new { @class = "btn btn-outline-success" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ClassId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
