@model Virtual_School_Register.Models.Class
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Deleting a class"];
}

<div class="d-flex justify-content-center text-center">
    <div>
        <h1>@Localizer["Delete class"]</h1>
        <br />

        <table class="table table-striped text-left" style="width:500px">
            <tbody>
                <tr>
                    <td>
                        <b>@Localizer["Name"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Localizer["Profile"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Content)
                    </td>
                </tr>
                @if (Model.ClassTutorId == null)
                {
                    <tr>
                        <td>
                            <b>@Localizer["Class tutor"]</b>
                        </td>
                        <td>
                            @Localizer["Not assigned"]
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            <b>@Localizer["Class tutor"]</b>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.ClassTutorId)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <form asp-action="Delete">
            <a class="btn btn-primary" asp-action="Index">@Localizer["Back"]</a>
            <input type="hidden" asp-for="ClassId" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        </form>
    </div>
</div>

