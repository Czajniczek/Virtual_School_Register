</div>
<br />

<div class="row">
    <div class="col-md-6">
        <h2>Subjects list:</h2>
        <br />
        <table class="table table-striped text-center">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayName("Name")</th>
                    <th>@Html.DisplayName("Content")</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Virtual_School_Register.Models.Subject subject in ViewBag.SubjectsList)
                {
                    <tr>
                        <td>@Html.DisplayFor(i => subject.Name)</td>
                        <td>@Html.DisplayFor(i => subject.Content)</td>
                        <td>
                            @*<a class="btn btn-outline-danger" asp-action="RemoveSubject" asp-route-id="@subject.SubjectId">Remove</a>*@
                            @Html.ActionLink("Remove from class", "RemoveSubjectFromClass", "Classes", new { id = subject.SubjectId, classId = ViewBag.ClassId }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h2>All subjects:</h2>
        <br />
        <table class="table table-striped text-center">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayName("Name")</th>
                    <th>@Html.DisplayName("Content")</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Virtual_School_Register.Models.Subject allSubject in ViewBag.AllSubjectsList)
                {
                    <tr>
                        <td>@Html.DisplayFor(i => allSubject.Name)</td>
                        <td>@Html.DisplayFor(i => allSubject.Content)</td>
                        <td>
                            @*<a class="btn btn-outline-success" asp-action="AddUser" asp-route-id="@studentWithNoClass.Id">Add</a>*@
                            @Html.ActionLink("Add to class", "AddSubjectToClass", "Classes", new { id = allSubject.SubjectId, classId = ViewBag.ClassId }, new { @class = "btn btn-outline-success" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ClassId">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
