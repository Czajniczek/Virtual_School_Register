@model Virtual_School_Register.Models.Subject
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Deleting a subject"];
}

<div class="d-flex justify-content-center text-center">
    <div>
        <h1>@Localizer["Delete subject"]</h1>
        <br />

        <table class="table table-striped text-left" style="width:500px">
            <tbody>
                <tr>
                    <td>
                        <b>@Localizer["Name"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Localizer["Content"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Content)
                    </td>
                </tr>
            </tbody>
        </table>

        <form asp-action="Delete">
            <a class="btn btn-primary" asp-action="Index">@Localizer["Back"]</a>
            <input type="hidden" asp-for="SubjectId" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        </form>
    </div>
</div>