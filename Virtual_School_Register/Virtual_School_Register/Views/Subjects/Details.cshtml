@model Virtual_School_Register.Models.Subject
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Subject details"];
}

<div class="d-flex justify-content-center text-center">
    <div>
        <h1>@Localizer["Subject details"]</h1>
        <br />

        <table class="table table-striped text-left" style="width:500px">
            <tbody>
                <tr>
                    <td>
                        <b>@Localizer["Name"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Localizer["Content"]</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Content)
                    </td>
                </tr>
            </tbody>
        </table>

        <div>
            <a class="btn btn-primary" asp-action="Index">@Localizer["Back"]</a>
            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.SubjectId">@Localizer["Edit"]</a>
            }
        </div>
    </div>
</div>
