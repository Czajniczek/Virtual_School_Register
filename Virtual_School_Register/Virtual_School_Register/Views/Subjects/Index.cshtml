@model IEnumerable<Virtual_School_Register.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table table-striped text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.SubjectId">Details</a>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.SubjectId">Edit</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.SubjectId">Delete</a>

                @*<a asp-action="Edit" asp-route-id="@item.SubjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SubjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SubjectId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
