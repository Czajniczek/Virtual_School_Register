@model IEnumerable<Virtual_School_Register.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </p>
}
else
{
    <br />
}

<table class="table table-striped text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.ActionLink("Files", "Index", "Files", new { subjectId = item.SubjectId }, new { @class = "btn btn-outline-info" })
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.SubjectId">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.SubjectId">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.SubjectId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
