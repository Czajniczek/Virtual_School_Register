    </header>
    <div class="container">
        @*<div class="container-fluid" style="text-align:center">*@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container d-flex align-self-center justify-content-center" style="text-align:center">
            <div><b>@Localizer["Style"]:</b>&nbsp;&nbsp;</div>
            <div>
                <button type="button" class="btn btn-light default" id="DefaultMode">@Localizer["Default"]</button>
                <button type="button" class="btn btn-dark dark" id="DarkMode">@Localizer["Dark"]</button>
                <button type="button" class="btn btn-warning contrast" id="ContrastMode">@Localizer["Contrast"]</button>
            </div>
            <div>
                &nbsp;&nbsp;&nbsp;&copy; 2021 - eRegister
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        if (getCookie("Theme") === undefined) setCookie("Theme", "Default", 365);

        document.getElementById("DefaultMode").onclick = function () { defaultTheme() };
        document.getElementById("DarkMode").onclick = function () { darkmodeTheme() };
        document.getElementById("ContrastMode").onclick = function () { contrastTheme() };

        function defaultTheme() {
            setCookie("Theme", "Default", 365);
            location.reload();
        }

        function darkmodeTheme() {
            setCookie("Theme", "DarkMode", 365);
            location.reload();
        }

        function contrastTheme() {
            setCookie("Theme", "ContrastMode", 365);
            location.reload();
        }

        function getCookie(name) {
            var dc = document.cookie;
            var prefix = name + "=";
            var begin = dc.indexOf("; " + prefix);

            if (begin == -1) {
                begin = dc.indexOf(prefix);

                if (begin != 0) return null;
            }
            else {
                begin += 2;
                var end = document.cookie.indexOf(";", begin);

                if (end == -1) end = dc.length;
            }

            return decodeURI(dc.substring(begin + prefix.length, end));
        }

        function setCookie(cname, cvalue, exdays) {
            var d = new Date();
            d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
            var expires = "expires=" + d.toUTCString();
            document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
        }
    </script>

</body>
</html>
