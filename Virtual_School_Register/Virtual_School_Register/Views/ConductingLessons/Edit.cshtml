@model Virtual_School_Register.Models.ConductingLesson

@{
    ViewData["Title"] = "Edit";
    var teachersList = ViewBag.TeachersList as IEnumerable<User>;
}

<h1>Edit</h1>

<h4>Teachers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConductingLessonId" />
            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId" disabled></select>
                <input asp-for="ClassId" hidden />
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId" disabled></select>
                <input asp-for="SubjectId" hidden />
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teacher</label>
                <select asp-for="UserId" class="form-control">
                    <option value=@(null)>Brak</option>
                    @foreach (var user in teachersList)
                    {
                        <option value="@user.Id">@user.Name @user.Surname</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
