@model Virtual_School_Register.Models.Evaluation

@{
    ViewData["Title"] = "Create";
    var where = ViewBag.BackTo as ConductingLesson;
}

<h1>Create</h1>

<h4>Evaluation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                @*<input asp-for="Value" class="form-control" />*@
                <select asp-for="Value" class="form-control">
                    <option value="1">1</option>
                    <option value="1+">1+</option>
                    <option value="2-">2-</option>
                    <option value="2">2</option>
                    <option value="2+">2+</option>
                    <option value="3-">3-</option>
                    <option value="3">3</option>
                    <option value="3+">3+</option>
                    <option value="4-">4-</option>
                    <option value="4">4</option>
                    <option value="4+">4+</option>
                    <option value="5-">5-</option>
                    <option value="5">5</option>
                    <option value="5+">5+</option>
                    <option value="6-">6-</option>
                    <option value="6">6</option>
                </select>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @*<input asp-for="Type" class="form-control" />*@
                <select asp-for="Type" class="form-control">
                    <option value="Kartkowka">Kartkówka</option>
                    <option value="Sprawdzian">Sprawdzian</option>
                    <option value="PracaDomowa">Praca domowa</option>
                    <option value="Odpowiedz">Odpowiedź</option>
                    <option value="Aktywnosc">Aktywność</option>
                    <option value="Semestr">Semestr</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" ></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>*@
                <input asp-for="UserId" hidden />
            </div>
            <div class="form-group">
                @*<label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>*@
                <input asp-for="SubjectId" hidden />
            </div>
            @*<div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Details", "ConductingLessons", new { id = @where.ConductingLessonId }, new { @class = "btn btn-primary" })
    @*<a class="btn btn-primary" asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
