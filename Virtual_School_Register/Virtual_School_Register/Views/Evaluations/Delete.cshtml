@model Virtual_School_Register.Models.Evaluation

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this grade?</h3>
<div>
    @*<h4>Evaluation</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Student
            @*@Html.DisplayNameFor(model => model.User)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
            @Html.DisplayFor(model => model.User.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EvaluationId" />
        <input type="submit" value="Delete" class="btn btn-danger" />

        @if (User.IsInRole("Admin") || User.IsInRole("Nauczyciel"))
        {
            <a class="btn btn-primary" asp-action="IndexTeacher">Back to List</a>
        }
        else
        {
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        }
    </form>
</div>
