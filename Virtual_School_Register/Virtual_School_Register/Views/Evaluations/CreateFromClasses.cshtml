@model Virtual_School_Register.Models.Evaluation

@{
    ViewData["Title"] = "Create";
    var where = ViewBag.BackTo as ConductingLesson;
    var toUser = ViewBag.UserId as string;
}

<h1>Create</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFromClasses">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <select asp-for="Value" class="form-control">
                    <option value="1">1</option>
                    <option value="1+">1+</option>
                    <option value="2-">2-</option>
                    <option value="2">2</option>
                    <option value="2+">2+</option>
                    <option value="3-">3-</option>
                    <option value="3">3</option>
                    <option value="3+">3+</option>
                    <option value="4-">4-</option>
                    <option value="4">4</option>
                    <option value="4+">4+</option>
                    <option value="5-">5-</option>
                    <option value="5">5</option>
                    <option value="5+">5+</option>
                    <option value="6-">6-</option>
                    <option value="6">6</option>
                </select>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="Kartkowka">Kartkówka</option>
                    <option value="Sprawdzian">Sprawdzian</option>
                    <option value="PracaDomowa">Praca domowa</option>
                    <option value="Odpowiedz">Odpowiedź</option>
                    <option value="Aktywnosc">Aktywność</option>
                    <option value="Semestr">Semestr</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserId" hidden />
            </div>
            <div class="form-group">
                <input asp-for="SubjectId" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Evaluations", new { userId = @toUser }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
