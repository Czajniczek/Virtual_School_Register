@model IEnumerable<Virtual_School_Register.ViewModels.HomeController.HomeIndexViewModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Home"];
}

<div class="text-center">
    <h1>@Localizer["Annoucements"]</h1>
    @*<h1>@ViewData["News"]</h1>*@
</div>

@foreach (var announcement in Model)
{
    <br />
    <div class="card border-secondary text-justify">
        <div class="card-header text-info text-center">
            <h5><b>@Html.DisplayFor(modelItem => announcement.Title)</b></h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Html.DisplayFor(modelItem => announcement.Content)</p>
        </div>
        <div class="card-footer text-muted">
            <div class="row">
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => announcement.Name)
                    @Html.DisplayFor(modelItem => announcement.Surname)
                </div>
                <div class="col-md-5">
                </div>
                <div class="col-md-3">
                    @Html.DisplayFor(modelItem => announcement.Date)
                </div>
            </div>
        </div>
    </div>
    <br />
}
