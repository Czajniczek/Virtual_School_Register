@model Virtual_School_Register.Models.Question

@{
    ViewData["Title"] = "Edit";
    var where = ViewBag.BackToTest as int?;
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerA" class="control-label"></label>
                <input asp-for="AnswerA" class="form-control" />
                <span asp-validation-for="AnswerA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerB" class="control-label"></label>
                <input asp-for="AnswerB" class="form-control" />
                <span asp-validation-for="AnswerB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerC" class="control-label"></label>
                <input asp-for="AnswerC" class="form-control" />
                <span asp-validation-for="AnswerC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerD" class="control-label"></label>
                <input asp-for="AnswerD" class="form-control" />
                <span asp-validation-for="AnswerD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAnswer" class="control-label"></label>
                @*<input asp-for="CorrectAnswer" class="form-control" />*@
                <select asp-for="CorrectAnswer" class="form-control">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
                @*<span asp-validation-for="CorrectAnswer" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="TestId" class="control-label"></label>
                    <select asp-for="TestId" class="form-control" asp-items="ViewBag.TestId"></select>
                    <span asp-validation-for="TestId" class="text-danger"></span>*@
                <input asp-for="TestId" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <select asp-for="Points" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a class="btn btn-primary" asp-action="Index">Back to List</a>*@
    @Html.ActionLink("Back to List", "Index", "Questions", new { testId = @where }, new { @class = "btn btn-primary" })

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
